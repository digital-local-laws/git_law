%pagination{ ng: { model: "list.page", change: "setPage(list.page)" },
  total: { items: "list.totalPages" }, items: { per: { page: "list.perPage" } } }
%table.table.table-striped
  %thead
    %tr
      %th Description
      %th{ colspan: 2 } Controls
  %tbody
    %tr{ ng: { repeat: "law in list.proposedLaws" } }
      %td
        {{law.description}}
      %td
        %a.btn.btn-default{ ng: { click: 'editProposedLaw(law)' } }
          %span.glyphicon.glyphicon-wrench
          Settings
      %td
        %a.btn.btn-danger{ ng: { click: 'destroyProposedLaw(law)' } }
          %span.glyphicon.glyphicon-remove
          Remove

